      @{
      int i=0;
      foreach (var item in @Model.Stores)
      {
        <p>
          @if(i==0)
          {
            <input class="form-check-input" type="radio" name="Id" Value=@item.Id checked>
          }
          else
          {
            <input class="form-check-input" type="radio" name="Id" Value=@item.Id>
          } 
          <label class="form-check-label">@item.Name @item.Id</label>
        </p>
        i++;
      }
      }
      <button type="submit">Submit</button>
    </form> 
    
