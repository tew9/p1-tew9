    <div>
        <label class="btn btn-primary">
            @Html.RadioButtonFor(model => model.Type, "store", new {name="Type"}) Store
        </label>
      </div><br>
      <input type="submit" class="fadeIn fourth" value="Log In">
    </form>

     @* error message display section. *@
    <span class = "text-danger">
      @Html.ValidationMessageFor(User => User.UserName)
      @Html.ValidationMessageFor(User => User.Password)
      @ViewData["Error"]
      @ViewData["Success"]
    </span>

    <!-- Remind Passowrd -->
    <div id="formFooter">
      <a class="underlineHover" href="#">Forgot Password?</a><br>
      <a class="underlineHover" asp-controller="Account" asp-action="Register">Register</a>
    </div>

  </div>
