@model PizzaBox.Client.Models.UserLoginModel

<div class="wrapper fadeInDown">
  <div id="formContent">
    <!-- Tabs Titles -->

    <!-- Icon -->
    <div class="fadeIn first">
      <i class='fas fa-user-check' id="icon" style='font-size:48px;color:red'></i>
      
   
    
    <!-- Login Form -->
    <form action="/account/login" method="POST">
        @* @foreach(var store in Stores)
        {
        <label class="btn btn-primary">
